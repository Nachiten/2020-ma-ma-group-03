{{#partial "contenido"}}

<div class = "presupuestos">
    <br>
    <br>

    <form action="/presupuesto" method="post">
     <center>
        <table class= "formulario1">
            <!--<tr> | No va la fecha
             <td>Fecha:</td>
             <td><input type="date" name="fecha" placeholder="Ingrese la fecha" required></td>
            </tr>-->

            <tr>
             <td>Monto Total:</td>
             <td> <input type="number" name="montoTotal" placeholder="Ej: 1000" required></td>
            </tr>
            <tr>
                <td>Tipo de Documento Comercial:</td>
                <td>
                    <select name = "documentoComercial" >
                        <option>Seleccionar documento comercial</option>
                        {{#each tiposDocumentoComercial}}
                            <option>{{nombre}}</option>
                        {{/each}}
                    </select>
                </td>
            </tr>
            <tr>
                <td>Numero Documento Comercial:</td>
                <td><input type="number" name="numeroDocumentoComercial" placeholder="Ingrese el numero" required></td>
            </tr>

        </table>
              
        <table class= "formulario3" border = "0">
          <td>Asociar categoria:</td>
               <td>
                   <!-- Esto solo me deja seleccionar solo una categoria 
                   <select name = "categoria" >
                     <option> Seleccionar categorias</option>
                     
                   </select>
                  -->

                   <input type="checkbox" name="categoria" value="1">categoria1<br>
                   <input type="checkbox" name="categoria" value="1">categoria2<br>
               </td>
        </table>

         <center>


             <table class="formulario2" border="0">
                 <tr style="background-color: white">
                     <td>Item:</td>
                     <td><input type="text" placeholder="Ej: papel" id="item"></td>
                     <td rowspan="2">
                         <div class="buttons">
                             <!--<button type="button" class="offset" onclick="nuevaFilaEnTabla()" >Agregar</button>-->
                             <button type="button" onclick="nuevaFilaEnTabla()">Agregar</button>
                         </div>
                     </td><!-- <input type="button" value="Agregar" class="principal" id="add_row" onclick="newRowTable()">-->

                     <td rowspan="2"><!--<p id="textoItems" class="textoItems"></p>--></td>
                 </tr>
                 <tr>
                     <td>Precio:</td>
                     <td><input type="number" placeholder="Ej: 200" id="precio"></td>
                     <td></td>
                 </tr>
             </table>

         </center>

         <center>
             <div class="table-wrapper">
                 <table id="tabla_items">
                     <thead>
                     <tr>
                         <th>ITEMS</th>
                         <th>PRECIO</th>
                         <td>ACCIONES</td>
                     </tr>
                     </thead>
                     <tbody id = "content_table">
                     <tr>
                         <td></td>
                         <td></td>
                     </tr>
                     </tbody>
                 </table>
             </div>
         </center>

	<button type="submit">Cargar</button>
	</center>
    </form>
    <script src="/js/formatoDeTabla.js"></script>
</div>

{{/partial}}
{{>principal.hbs}}