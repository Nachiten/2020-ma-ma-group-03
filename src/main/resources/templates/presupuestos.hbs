{{#partial "contenido"}}

<div class = "presupuestos">
    <br>
    <br>

    <form action="" method="post">
     <center>
        <table class= "formulario1">
            <tr>
                <td>Operación de Egreso asociada:</td>
                <td>
                    <select name="operacionEgreso" required >
                        <option hidden selected>-Seleccionar una operación de egreso-</option>
                        {{#each operacionesEgreso}}
                            <option>ID: {{idOperacion}} | Fecha: {{fecha}}</option>
                        {{/each}}
                    </select>
                </td>
            </tr>
            <tr>
             <td>Monto Total:</td>
             <td> <input type="number" step="0.01" min="0" name="montoTotal" placeholder="Ej: 1000" required></td>
            </tr>
            <tr>
                <td>Tipo de Documento Comercial:</td>
                <td>
                    <select name = "documentoComercial" >
                        <option>Seleccionar documento comercial</option>
                        {{#each tiposDocumentoComercial}}
                            <option>{{nombre}}</option>
                        {{/each}}
                    </select>
                </td>
            </tr>
            <tr>
                <td>Número Documento Comercial:</td>
                <td><input type="number" min="0" name="numeroDocumentoComercial" placeholder="Ingrese el número" required></td>
            </tr>

        </table>
              
        <table class= "formulario3" border = "0">
          <td>Asociar categorias:</td>
            <!-- TR = Fila | TD = Columna-->
            <tr>
                <td>
                   {{#each criterios}}
                       <p>Criterio {{nombre}}:</p>
                       {{#each listaCategoriaCriterio}}
                       <input type="checkbox" name="{{nombreCategoria}}" value="1"> {{nombreCategoria}}<br>
                       {{/each}}
                       <br>
                   {{/each}}
                </td>

                <td>
                    {{#each criterios2}}
                        <p>Criterio {{nombre}}:</p>
                        {{#each listaCategoriaCriterio}}
                            <input type="checkbox" name="{{nombreCategoria}}" value="1"> {{nombreCategoria}}<br>
                        {{/each}}
                        <br>
                    {{/each}}
                </td>
            </tr>

        </table>

         <center>
             <table class="formulario2" border="0">
                 <tr style="background-color: white">
                     <td>Item:</td>
                     <td><input type="text" placeholder="Ej: papel" id="item"></td>
                     <td rowspan="2">
                         <div class="buttons">
                             <button type="button" onclick="nuevaFilaEnItems()">Agregar</button>
                         </div>
                     </td>

                     <td rowspan="2"></td>
                 </tr>
                 <tr>
                     <td>Precio:</td>
                     <td><input type="number" step="0.01" min="0" placeholder="Ej: 200" id="precio"></td>
                     <td></td>
                 </tr>
             </table>

         </center>

         <center>
             <div class="table-wrapper">
                 <table id="tabla_items">
                     <thead>
                     <tr>
                         <th>ITEMS</th>
                         <th>PRECIO</th>
                         <td>ACCIONES</td>
                     </tr>
                     </thead>
                     <tbody id = "content_table">
                     <tr>
                         <td id="item"></td>
                         <td id="precio"></td>
                          
                     </tr>
                     </tbody>
                 </table>
             </div>
             <!-- TODO | Carlos: Desactive la funcion de javasript porque hacia que no me funcionada el POST. Nacho-->
             <button type="submit"> <!--onclick="mostrarModalGuardadoPresupuestos({{id}})"--> Guardar</button>
         </center>
	</center>
    </form>
    
</div>
<link rel="stylesheet" href="/css/estiloPresupuestos.css" />
<script src="/js/formatoDeTabla.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
{{/partial}}
