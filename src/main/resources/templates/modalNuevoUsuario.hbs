<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h1 id="tituloModal" class="modal-title">
                <i class="fas fa-plus-circle"></i>
                ¡Nuevo usuario!
            </h1>
        </div>
        <div class="modal-body">
            <div class = "altaUsuario">
                <form action= "javascript:void(0)" method="post">
                    <center>
                        <table class= "formulario" border = 0 >
                            <tr>
                                <td>Nombre:</td>
                                <td><input type="text" name="nombre" id = "altaUsuario-nombre" placeholder="Ingrese un nombre"></td>
                            </tr>
                            <tr>
                                <td>Apellido:</td>
                                <td><input type="text" name="apellido" id = "altaUsuario-apellido" placeholder="Ingrese un apellido"></td>
                            </tr>
                            <tr>
                                <td>Nombre de usuario:</td>
                                <td><input type="text" name="nombreDeUsuario" id = "altaUsuario-nombreDeUsuario" placeholder="Ingrese un usuario"></td>
                            </tr>
                            <tr>
                                <td>Contraseña:</td>
                                <td><input type="password" name="contrasenia"   id = "altaUsuario-contrasenia" placeholder="Ingrese una contraseña"></td>
                            </tr>
                            <tr>
                                <td>Entidad Jurídica:</td>
                                <td>
                                    <select name = "entidad" id = "altaUsuario-entidad" title="Elija una opción">
                                        <option value="0" hidden selected>Elegir una entidad jurídica</option>
                                        {{#each entidadesJuridicas}}
                                            <option value="{{id}}">{{razonSocialEntidadJuridica}}</option>
                                        {{/each}}
                                    </select>
                                </td>
                            </tr>
                            <tr>
                                <td>Tipo de usuario:</td>
                                <td>
                                    <select name = "tipoUsuario" id = "altaUsuario-tipoUsuario" title="Elija una opción">
                                        <option value="0" hidden selected>Elegir tipo de usuario</option>
                                        {{#each tiposUsuarios}}
                                            <option>{{this}}</option>
                                        {{/each}}
                                    </select>
                                </td>
                            </tr>
                        </table>
                        <div class="modal-footer">
                            <button type="button" class="btn" data-dismiss="modal" onClick="location.reload();">
                                Cancelar
                            </button>
                            <button type="submit" onclick="mostrarModalConfirmarNuevousuario()">
                                Guardar
                            </button>
                        </div>
                    </center>
                </form>
            </div>
        </div>
    </div>
</div>

