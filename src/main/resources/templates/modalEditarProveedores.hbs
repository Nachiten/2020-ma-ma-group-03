<div class="modal-editar-proveedores">
    <div class="modal-content">
        <div class="modal-header">
            <h1 id="tituloModal" class="modal-title">
                <a class="fas fa-edit"></a>
                ¡Editar Proveedores!
            </h1>
        </div>
        <div class="modal-body">
            <div class = "listadoDeUsuarios">
                <center>
                    <div class="table-wrapper">
                        <table id="proveedores">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Apellido</th>
                                    <th>Razón social</th>
                                    <th>CUIT/CUIL</th>
                                    <th>Editar</th>
                                    <th>Dar de baja</th>
                                </tr>
                            </thead>
                            <tbody id="content_table">
                                {{#each listadoProveedoresHabilitados}}
                                    <tr>
                                        <td>{{nombreProveedor}}</td>
                                        <td>{{apellidoProveedor}}</td>
                                        <td>{{razonSocialProveedor}}</td>
                                        <td>{{cuit}}</td>
                                        <td>
                                            <div>
                                                <a class="fas fa-edit" onclick="mostrarModalParaConfirmarEditarUnProveedor({{id}})" style="cursor: pointer"></a>
                                            </div>
                                        </td>
                                        <td>
                                            <div>
                                                <a class="fas fa-trash" onclick="mostrarModalParaConfirmarBajaDeUnProveedor({{id}})" style="cursor: pointer"></a>
                                            </div>
                                        </td>
                                    </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </center>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal" onClick="location.reload();" >
                    Cerrar
                </button>
            </div>
        </div>
    </div>
</div>
<script src="/js/accionesProveedores.js"></script>
