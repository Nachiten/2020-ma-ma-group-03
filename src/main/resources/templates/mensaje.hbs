{{#partial "contenido"}}
    <div class="table-wrapper">
        <table id="tabla_mensajes">
            <thead>
                <tr>
                    <th>FECHA</th>
                    <th>MENSAJE</th>
                    <td>LE√çDO</td>
                </tr>
            </thead>
            <tbody id = "content_table">
            {{#each bandejaDeMensajes}}
                <tr>
                    <td>{{fechaCreado}}</td>
                    <td><button type="submit" onclick="mostrarModalContenidoMensaje({{id}})">Leer</button></td>
                    <td>
