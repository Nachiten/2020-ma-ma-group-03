{{#partial "contenido"}}

    <center>
    <h3>BANDEJA DE MENSAJES</h3>

    <div class="table-wrapper">
        <table class="tabla-de-mensajes" id="tabla_mensajes">
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Mensaje</th>
                    <td>Le√≠do</td>
                </tr>
            </thead>
            <tbody id = "content_table">
            {{#each bandejaDeMensajes}}
                <tr>
                    <td>{{fechaCreado}}</td>
                    <td><button type="submit" style="color: deepskyblue" onclick="mostrarModalContenidoMensaje({{id}})">Leer Mensaje</button></td>
                    <td>
                        {{#if leido}}
