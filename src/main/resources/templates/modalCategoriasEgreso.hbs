<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h1 id="tituloModal" class="modal-title">
                Listado de Categorías</h1>
        </div>
        <div class="modal-body">
            <div class="table-wrapper">
                <table id="tabla_operaciones_egreso">
                    <thead>
                    <tr>
                        <th>Categoría</th>
                        <th>Descripción</th>
                    </tr>
                    </thead>
                    <tbody id="content_table">
                    {{#each categorias}}
                        <tr>
                            <td>{{nombreCategoria}}</td>
                            <td>{{descripcion}}</td>
                        </tr>
                    {{/each}}
                    </tbody>

                </table>
                <div class="modal-footer">
                    <button type="button"  onclick="" class="btn" data-dismiss="modal" > Aceptar </button>
                </div>
            </div>
        </div>
        <script src="/js/accionesUsuarios.js"></script>
        <link rel="stylesheet" href="/css/modalAccionesUsuarios.css"/>