<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h1 id="tituloModal" class="modal-title">
                <i class="fas fa-edit"></i>
                Â¡Editar usuarios!
            </h1>
        </div>
        <div class="modal-body">
            <div class = "listadoDeUsuarios">
                <form action="">
                    <center>
                        <div class="table-wrapper">
                            <table id="usuarios">
                                <thead>
                                <tr>
                                    <th>NOMBRE</th>
                                    <th>APELLIDO</th>
                                    <th>USUARIO</th>
                                    <th>TIPO DE USUARIO</th>
                                    <td>EDITAR</td>
                                    <td>DAR DE BAJA</td>
                                </tr>
                                </thead>
                                <tbody id="content_table">
                                {{#each listadoDeUsuarios}}
                                    <tr>
                                        <td>{{nombre}}</td>
                                        <td>{{apellido}}</td>
                                        <td>{{nombreUsuario}}</td>
                                        <td>{{tipo}}</td>
                                        <td>
                                            <div>
                                                <a class="fas fa-edit" onclick="mostrarModalParaEditarUnUsuario('{{id}}')" style="cursor: pointer"></a>
                                            </div>
                                        </td>
                                        <td>
                                            <div>
                                                <a class="fas fa-trash" onclick="darDeBajaUsuario('{{id}}')" style="cursor: pointer"></a>
                                            </div>
                                        </td>
                                    </tr>
                                {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </center>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal" onClick="location.reload();">
                    Cerrar
                </button>
            </div>
        </div>
    </div>
</div>
<script src="/js/accionesUsuarios.js"></script>
