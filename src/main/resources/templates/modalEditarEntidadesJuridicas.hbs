<div class="modal-editar-entidades">
    <div class="modal-content">
        <div class="modal-header">
            <h1 id="tituloModal" class="modal-title">
                <a class="fas fa-edit"></a>
                ¡Editar Entidades Jurídicas!
            </h1>
        </div>
        <div class="modal-body">
            <div class = "listadoDeUsuarios">
                <center>
                    <div class="table-wrapper">
                        <table id="proveedores">
                            <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Nombre ficticio</th>
                                <th>Razón social</th>
                                <th>CUIT/CUIL</th>
                                <th>Editar</th>
                                <th>Dar de baja</th>
                            </tr>
                            </thead>
                            <tbody id="content_table">
                            {{#each listaEntidadesJuridicasHabilitadas}}
                                <tr>
                                    <td>{{nombreEntidadJuridica}}</td>
                                    <td>{{nombreFicticioEntidadJuridica}}</td>
                                    <td>{{razonSocialEntidadJuridica}}</td>
                                    <td>{{cuitEntidadJuridica}}</td>
                                    <td>
                                        <div>
                                            <a class="fas fa-edit" onclick="mostrarModalParaEditarUnaEntidadJuridica('{{id}}')" style="cursor: pointer"></a>
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            <a class="fas fa-trash" onclick="darDeBajaEntidadJuridica('{{id}}')" style="cursor: pointer"></a>
                                        </div>
                                    </td>
                                </tr>
                            {{/each}}
                            </tbody>
                        </table>
                    </div>
                </center>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal" onClick="location.reload();">
                    Cerrar
                </button>
            </div>
        </div>
    </div>
</div>
<script src="/js/accionesEntidadJuridica.js"></script>
